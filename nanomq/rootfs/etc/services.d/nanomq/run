#!/usr/bin/with-contenv bashio
# ==============================================================================
# Runs NanoMQ
# ==============================================================================

declare -a options

options+=(start)

if bashio::debug; then
    options+=(--log_level debug)
else
    options+=(--log_level info)
fi

options+=(--http start)

# Send out discovery and service information
./discovery &

bashio::log.info "Starting NanoMQ MQTT broker..."
exec nanomq "${options[@]}"
